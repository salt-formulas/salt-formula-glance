{%- set client_default_params = {
      'enabled': false
    }
%}

{% set client = salt['grains.filter_by']({
    'BaseDefaults': client_default_params,
    'Debian': {
        'pkgs': ['python-glanceclient', 'python-keystoneclient']
    },
    'RedHat': {
        'pkgs': ['python-glanceclient', 'python-keystoneclient']
    },
}, merge=pillar.glance.get('client', {}), base='BaseDefaults') %}

