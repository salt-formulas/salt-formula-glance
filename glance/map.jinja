        'glance_gid': 302,
        'amqp': {
          'default_notification_exchange': 'glance'
        },
        'oslo_policy': {
          'policy_file': '/etc/glance/policy.json'
        },
        'logging': {
          'app_name': 'glance',
          'log_appender': false,
          'log_handlers': {
            'watchedfile': {
              'enabled': true
